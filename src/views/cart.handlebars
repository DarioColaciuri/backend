{{> navbar}}
<h1>Carrito de Usuario</h1>
<div class="products-container">
{{#if userCart.products.length}}
  {{#each userCart.products}}
    <div class="product">
      <h2>{{this.product.title}}</h2>
      <div class="product-info">
      <p>Descripción: {{this.product.description}}</p>
      <p>Categoría: {{this.product.category}}</p>
      <p>Precio: {{this.product.price}}</p>
      <p>Cantidad: {{this.quantity}}</p>
      <p>Código: {{this.product.code}}</p>
      <p>Stock: {{this.product.stock}}</p>
      </div>
      <img class="product-img" src="{{this.product.thumbnail}}" alt="Imagen del producto">
    </div>
  {{/each}}
  <button id="buy" onclick="buyCart('{{userCart._id}}')">Comprar</button>
</div>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}


<script src="/js/createTicket.js"></script>

